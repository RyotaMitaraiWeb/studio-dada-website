---
interface Props {
  /** Passed by the desired width, with height scaling automatically */
  size: number;
}

const { size } = Astro.props;
const height = (size / 3) * 2;
const borderRadius = size * 0.1;
---

<svg width={size} height={height} viewBox="0 0 30 20" xmlns="http://www.w3.org/2000/svg">
  <rect width="30" height="20" fill="white" rx={borderRadius} ry={borderRadius}/>
  <rect y="6.67" width="30" height="6.67" fill="#00966E"/>
  <rect y="13.33" width="30" height="6.67" fill="#D62612"/>
</svg>