---
interface Props {
  /** Passed by the desired width, with height scaling automatically */
  size: number;
}

const { size } = Astro.props;
const height = (size / 3) * 2;
const borderRadius = size * 0.1;
---

<svg width={size} height={height} viewBox="0 0 60 40" xmlns="http://www.w3.org/2000/svg">
  <rect rx={borderRadius} ry={borderRadius} width="60" height="40" fill="#012169"/>

  <polygon points="0,0 60,40 60,35 5,0" fill="white"/>
  <polygon points="60,0 0,40 0,35 55,0" fill="white"/>
  
  <polygon points="0,0 60,40 53,40 0,7" fill="#C8102E"/>
  <polygon points="60,0 0,40 7,40 60,7" fill="#C8102E"/>

  <rect x="25" width="10" height="40" fill="white"/>
  <rect y="15" width="60" height="10" fill="white"/>

  <rect x="27" width="6" height="40" fill="#C8102E"/>
  <rect y="17" width="60" height="6" fill="#C8102E"/>
</svg>