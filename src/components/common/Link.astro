---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  className?: string;
  underline?: "default" | "onhover";
}

const { className, underline: underlineOnHover = "default", ...props } = Astro.props;
---

<a
  {...props}
  class:list={[
    underlineOnHover === "default"
      ? "underline hover:no-underline active:underline"
      : "no-underline hover:underline active:no-underline",
    "focus-item transition-colors",
    className,
  ]}
>
  <slot />
</a>
